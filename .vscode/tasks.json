{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "..",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "detail": "Configure the project with CMake",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell", 
            "command": "make",
            "args": [
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the project with make",
            "dependsOn": "CMake Configure",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "detail": "Clean build artifacts",
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "make",
            "args": [
                "&&",
                "./main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "test",
            "detail": "Build and run the application",
            "dependsOn": "Build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}